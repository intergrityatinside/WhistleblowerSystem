                    <div>
                        <MudText>
                            <strong>@L["faq_subtitle_1"]</strong>
                        </MudText>
                    </div>
                </TitleContent>
                <ChildContent>
                    <label class="question">@L["faq_question_1"] </label>
                    <p class="answer">@L["faq_answer_1"]</p>
                    <label class="question">@L["faq_question_2"] </label>
                    <p class="answer">@L["faq_answer_2"]</p>
                    <label class="question">@L["faq_question_3"] </label>
