            <MudExpansionPanel>
                <TitleContent>
                    <div>
                        <MudText>
                            <strong>@L["faq_subtitle_2"]</strong>
                        </MudText>
                    </div>
                </TitleContent>
                <ChildContent>
                    <label class="question">@L["faq_question_4"] </label>
                    <p class="answer">@L["faq_answer_4"]</p>
                    <label class="question">@L["faq_question_5"] </label>
