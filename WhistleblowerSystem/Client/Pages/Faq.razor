                    <label class="question">@L["faq_question_6"] </label>
                    <p class="answer">@L["faq_answer_6"]</p>
                </ChildContent>
            </MudExpansionPanel>
            <MudExpansionPanel>
                <TitleContent>
                    <div>
                        <MudText>
                            <strong>@L["faq_subtitle_3"]</strong>
