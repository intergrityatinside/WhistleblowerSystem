@page "/login"

<div class="form-group">
    <label for="email">Email Adresse</label>
    <input îd="email" type="email" @bind="_user.Email" class="form-control" />
    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
</div>
<div class="form-group">
    <label for="pw">Passwort</label>
    <input id="pw" type="text" @bind="_user.Password" class="form-control" />
</div>
<button @onclick="async () => await OnLogin()" class="btn btn-primary">Login</button>

@if (_message != null)
{
    <span style="color:red;">
        @_message
    </span>
}