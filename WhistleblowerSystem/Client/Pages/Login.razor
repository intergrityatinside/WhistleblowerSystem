@page "/login"

    <div class="content-container">
        <qdiv class="content">
            <h1 class="page-title">@L["login_title"]</h1>
            <div class="login-container">
                <div class="form-group control">
                    <MudTextField @bind-Value="_user.Email" Label=@L["login_email"] Variant="Variant.Outlined"></MudTextField>
                </div>
                <div class="form-group control">
                    <MudTextField @bind-Value="_user.Password" Label=@L["login_password"] InputType="InputType.Password"  Variant="Variant.Outlined"></MudTextField>
                </div>
            </div>
            @if (_message != null)
            {
                <div style="color:red;">
                    @_message
                </div>
            }

        </qdiv>
        <div class="footer">
            <MudButton OnClick="async () => await OnLogin()" Color="Color.Dark" Variant="Variant.Filled">@L["login_continue"]</MudButton>
        </div>
    </div>




