@page "/login"

<div class="content-container">
    <div class="content">
        <h1>Empfänger Login</h1>
        <div class="login-container">
            <div class="form-group control control-login">
                <MudTextField @bind-Value="_user.Email" Label="E-Mail" Variant="Variant.Outlined"></MudTextField>
            </div>
            <div class="form-group control control-login">
                <MudTextField @bind-Value="_user.Password" Label="Passwort" Variant="Variant.Outlined"></MudTextField>
            </div>
        </div>
        @if (_message != null)
        {
            <div style="color:red;">
                @_message
            </div>
        }
        Beispiel Übsersetzung: @L["hallo"]
    </div>
    <div class="footer">
        <MudButton OnClick="async () => await OnLogin()" Color="Color.Dark" Variant="Variant.Filled">Login</MudButton>
    </div>
</div>




