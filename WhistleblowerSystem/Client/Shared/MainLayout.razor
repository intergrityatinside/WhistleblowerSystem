@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <div class="main">
    
      @if (_currentUser != null)
      {
        <div  class="top-row px-4">
            <spam>  Hi, @_userName</spam>
            <a @onclick="LogoutClicked" target="_blank" class="ml-md-auto">Logout</a>
        </div>
      }
        <div class="content px-4">
            @Body
        </div>
    </div>
</div>
